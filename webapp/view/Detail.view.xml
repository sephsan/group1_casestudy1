<mvc:View controllerName="ordersystem.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"   
    xmlns:core="sap.ui.core"         
    xmlns="sap.m">
    <Page id="page3" title="{i18n>title}">
          <content>
     <Panel id="panelOrderDetails" headerText="{i18n>ordDetails}" class="sapUiResponsiveMargin" width="auto" >  
        <form:SimpleForm id="formOrderDetails" layout="ResponsiveGridLayout"
             labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="5" 
             emptySpanL="5" emptySpanM="5" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" >
                <form:content>                
                <Label id="lblDetOrderNo"     text="{i18n>orderNum}"/>
                <Text id="inDetOrderNo"       text="{OrdId}" />                
                <Label id="lblDetCreateDate"  text="{i18n>createDate}"/>
                <Text id="inCreateDate"       text="{CreateDate}" />        
                <Label id="lblDetRecPlant"   text="{i18n>recPlant}"/>
                <Text id="inDetRecPlant"     text="{ReceivingPlant}"/>                
                 <Label id="lblDetDelPlant"    text="{i18n>delPlant}"/>
                <Text id="inDetDelPlant"     text="{DeliveringPlant}" />
                <Label id="lblDetStaus"       text="{i18n>status}"/>
                <Text id="inDetStatus"       text="{Status}" />
                
            </form:content>
 
        </form:SimpleForm>        
 
    </Panel>
     <!-- ===== Product Table Panel ===== -->
            <Panel headerText="Product (0)" class="sapUiResponsiveMargin">
 
                <Bar slot="headerToolbar">
                    <contentLeft>
                        <Title text="Product (0)" />
                    </contentLeft>
                    <contentRight>
                        <Button icon="sap-icon://add" tooltip="Add Product" press=".onAddProduct"/>
                        <Button icon="sap-icon://delete" tooltip="Delete Product" press=".onDeleteProduct"/>
                    </contentRight>
                </Bar>
 
                <Table id="productTable" inset="false" mode="MultiSelect" noDataText="No data" items="{/Product_Orders}">
                    <columns>
                        <Column>
                            <Label text="Product Name"/>
                        </Column>
                        <Column>
                            <Label text="Quantity"/>
                        </Column>
                        <Column>
                            <Label text="Price Per Quantity"/>
                        </Column>
                        <Column>
                            <Label text="Total Price"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{ProdDesc}"/>
                                <Input value="{Qty}" type="Number"/>
                                <Text text="{Price}"/>
                                <Text text="{ parts: [
                                                            {path: 'Qty'},
                                                            {path: 'Price'}
                                                            ],
                                                            formatter: '.formatTotalPrice' }"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
 
            </Panel>
                  </content>
             <footer>
            <Toolbar>
                <ToolbarSpacer/> 
                <Button text="Edit" type="Emphasized"/>
                <Button text="Cancel" type="Reject"  press="onCancel"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>